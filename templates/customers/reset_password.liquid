{% layout settings.customer_layout %}

<h2>Reset Your Password</h2>
<p>Enter a new password for {{ email }}</p>

{% form 'reset_customer_password' %}
  {{ form.errors | default_errors }}

  <label for="password">Password</label>
  <input type="password" value="" name="customer[password]" id="customer_password"/>

  <label for="password_confirmation">Password Confirmation</label>
  <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation"/>

  <input class="btn" type="submit" value="Activate Account" />
   or
  <input type="submit" class="cancel" name="decline" id="customer_decline" value="Decline Invitation" />
{% endform %}
