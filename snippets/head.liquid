<!--~~~~~~~~~~~~~~~~~~~~ Head Snippet ~~~~~~~~~~~~~~~~~~~~-->

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--~~~~~~~~~~~~~~~~~~~~ Page Title ~~~~~~~~~~~~~~~~~~~~-->

    <title>
    {% if template contains "page" %}
    	{{page.title}} - {{ shop.name }}
    {% elsif template == "product" %}
      {% if product.compare_at_price_min > 0 %}
        Sale: {{product.title}} from {{ shop.name }}
     {% else %}
    	  Buy {{product.title}} from {{ shop.name }}
     {% endif %}
    {% elsif template contains "collection" %}
    	{{collection.title}} from {{ shop.name }}
    {% else %}
      {{settings.other-pages-title }}
    {% endif %}
    </title>

      <!--~~~~~~~~~~~~~~~~~~~~ Page Meta Description ~~~~~~~~~~~~~~~~~~~~-->

    	{% if template == "product" %}
    		<meta name="description" content="{{ product.description | strip_html | truncate: 150 }}" />
    		<meta property="og:title" content="{{ product.title }}" />
       <meta property="og:type" content="product" />
       <meta property="og:url" content="{{ shop.url }}{{ product.url }}" />
       <meta property="og:image" content="{{ product.featured_image | product_img_url: 'medium' }}" />
       <meta property="og:site_name" content="{{shop.name}}" />
       <meta property="fb:admins" content="771840267" />
      {% elsif template contains "collection" %}
    	  <meta name="description" content="{{ collection.description | strip_html }}" />
    	{% else %}
    		<meta name="description" content="{{ settings.other-pages-description }}">
    	{% endif %}

      <!--~~~~~~~~~~~~~~~~~~~~ Page Meta Keywords ~~~~~~~~~~~~~~~~~~~~-->

    	{% if template == "product" %}
    		<meta name="keywords" content="{{ settings.meta-keywords }}, , {% for tag in product.tags %}{{tag}}, {% endfor %}" />
    	{% else %}
    		<meta name="keywords" content="{{ settings.meta-keywords }}">
    	{% endif %}



    <!--[if ! lte IE 6]>
      <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
			{{ 'main.css' | asset_url | stylesheet_tag }}
	  <![endif]-->

	<!--[if lte IE 8]>
		{{ 'ie8.css' | asset_url | stylesheet_tag }}
	<![endif]-->

	<!--[if lte IE 6]>
        <link rel="stylesheet" href="http://universal-ie6-css.googlecode.com/files/ie6.1.1.css" media="screen, projection">
    <![endif]-->
    {{ 'modernizr-2.6.2.min.js' | asset_url | script_tag }}

  <!--~~~~~~~~~~~~~~~~~~~~ Other links ~~~~~~~~~~~~~~~~~~~~-->

	<link rel="alternate" type="application/rss+xml" title="{{ shop.name }}" href="{{shop.url}}/collections/all.atom" />
	<link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}">
	<link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml" />
	<link rel="canonical" href="{{ canonical_url }}"/>
